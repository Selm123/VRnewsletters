<p id="notice"><%= notice %></p>
<nav>
   <% if @current_user.present? %>
     <%= button_to "Logout", login_path, :method => "delete"%>
   <% end %>
</nav>


<h1>Subscribers</h1>

<table>
  <thead>
    <tr>
      <th>Email</th>
      <th>First name</th>
      <th>Last name</th>
      <th>Software</th>
      <th>Hardware</th>
      <th>News</th>
      <th>Offers</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @subscribers.each do |subscriber| %>
      <tr>
        <td><%= subscriber.email %></td>
        <td><%= subscriber.first_name %></td>
        <td><%= subscriber.last_name %></td>
        <td><%= subscriber.software %></td>
        <td><%= subscriber.hardware %></td>
        <td><%= subscriber.news %></td>
        <td><%= subscriber.offers%></td>
        <td><%= link_to 'Show', subscriber %></td>
        <td><%= link_to 'Edit', edit_subscriber_path(subscriber) %></td>
        <td><%= link_to 'Destroy', subscriber, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

