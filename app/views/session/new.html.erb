<h1 id="sign_in_form">Log In</h1>

<%= form_tag login_path do %>
<%# error message for signin form %>
<% if flash[:error_message] %>
  <h2 id="sign_in_form"><%= flash[:error_message] %></h2>
<% end %>

<div class="form-group" id="sign_in_form">
  <%= label_tag :email%>
  <%= email_field_tag :email, nil, :class=> 'form-control', :size =>"50" %>
</div>

<div class="form-group" id="sign_in_form">
  <%= label_tag :password %>
  <%= password_field_tag :password, nil, :class=> 'form-control', :size =>"50" %>
</div>

<div id="sign_in_form">
  <%= submit_tag "Sign In", :class=>"btn btn-primary" , :size =>"50"%>
</div>
<% end %>
